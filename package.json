{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"Swift Server,Next.js\" -c \"#F05138.bold,cyan.bold\" \"pnpm dev:swift\" \"pnpm wait-on 'Running dev server' && pnpm dev:web\"",
    "dev:swift": "swift package --disable-sandbox vercel dev",
    "dev:web": "next dev",
    "build": "pnpm build:web && pnpm build:swift",
    "build:web": "next build",
    "build:swift": "swift build && swift package --disable-sandbox vercel",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@types/node": "20.5.7",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "eslint-config-next": "13.4.19",
    "next": "^13.5.6",
    "postcss": "8.4.28",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.10.1",
    "react-wrap-balancer": "^1.1.0",
    "sharp": "^0.33.2",
    "tailwindcss": "3.3.3"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "8.48.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "5.2.2",
    "vercel": "^34.2.0"
  }
}
